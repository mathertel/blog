{% macro postCard(post) %}
<div class="card autolink">
  {%- if (post.data.image) -%}
    <img src="{{ post.filePathStem }}.jpg">
  {%- endif %}
  <div class="main">
    <h3><a  class="postlist-link" href="{{ post.url }}">{{ post.data.title }}</a></h3>
    {{ post.data.description | markdown | safe -}}
  </div>
  <div class="footer">
  <p><time>{{ post.data.modified | toISODate }}</time> | tag1 tag2 </p>
  </div>
</div>
{%- endmacro %}

